    <!-- تهيئة الرسوم البيانية -->
    <script>
        // تهيئة مخطط الإيرادات
        const revenueCtx = document.getElementById('revenueChart')?.getContext('2d');
        if (revenueCtx) {
            new Chart(revenueCtx, {
                type: 'line',
                data: {
                    labels: ['يناير', 'فبراير', 'مارس', 'أبريل', 'مايو', 'يونيو'],
                    datasets: [{
                        label: 'الإيرادات (دينار)',
                        data: [1200000, 1500000, 1800000, 2000000, 2200000, 2500000],
                        borderColor: '#1a237e',
                        backgroundColor: 'rgba(26, 35, 126, 0.1)',
                        borderWidth: 2,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top',
                            rtl: true
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return new Intl.NumberFormat('ar-IQ').format(value) + ' دينار';
                                }
                            }
                        }
                    }
                }
            });
        }
        
        // تهيئة مخطط توزيع الحجوزات
        const bookingsCtx = document.getElementById('bookingsChart')?.getContext('2d');
        if (bookingsCtx) {
            new Chart(bookingsCtx, {
                type: 'doughnut',
                data: {
                    labels: ['نشطة', 'مكتملة', 'ملغاة', 'قيد الانتظار'],
                    datasets: [{
                        data: [45, 30, 10, 15],
                        backgroundColor: [
                            '#2e7d32',
                            '#1a237e',
                            '#d32f2f',
                            '#f57c00'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'bottom',
                            rtl: true
                        }
                    }
                }
            });
        }
    </script>
